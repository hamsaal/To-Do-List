<%- include('header'); -%>

<body>
  <div class="box" id="heading">
    <h1><%= listheading %></h1>
  </div>
  <div class="box">
    <%  newitems.forEach(function(item){ %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="check" value=<%= item._id %> onChange="this.form.submit()">
        <p><%= item.name %></p>
    </div>
    </form>
    <% }) %>
    <form class=" item" action="/" method="post">
        <input type="text" name="itemName" autocomplete="off">
        <button type="submit" name="listName" value=<%= listheading %>>+</button>
    </form>
  </div>


</body>

<%- include('footer'); -%>
